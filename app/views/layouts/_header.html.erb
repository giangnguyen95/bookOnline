<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Book_Online", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to root_path do %>
             <i class="fa fa-home fa"></i>
             <% end %>
        </li>

         <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-th-list"></i>
<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Help", '/static_pages/help' %></li>
              <li><%= link_to "Contact", '/static_pages/contact' %></li>
              <li><%= link_to "About", '/static_pages/about' %></li>
            </ul>
          </li>

        <% if logged_in? %>
          <li title="List users"><%= link_to users_path do%>
                <i class="fa fa-users fa"></i>
              <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to current_user do %>
                   <i class="fa fa-user"></i> Profile
                  <% end %>
              </li>
              <li><%= link_to edit_user_path(current_user) do %>
                   <i class="fa fa-cog"></i> Settings
                  <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: "delete" do %>
                  <i class="fa fa-sign-out"></i> Logout
                <% end %>
              </li>
            </ul>
          </li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              List Books <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Van Hoc", books_path %></li>
              <li><%= link_to "Tieu Thuyet", novels_path %></li>
              <li class="divider"></li>
            </ul>
          </li>

        <% else %>
          <li title="Login"><%= link_to login_path do%>
                <i class="fa fa-sign-in"></i>
              <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>